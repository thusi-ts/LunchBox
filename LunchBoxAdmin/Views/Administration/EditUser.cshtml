@model EditUserViewModel

@{
    ViewBag.Title = "Edit User";
}

<h4>Edit User</h4>

<form method="post" class="mt-3">
    
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group row mt-3">
        <label asp-for="Id" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Id" disabled class="form-control">
        </div>
    </div>
    <div class="form-group row mt-3">
        <label asp-for="UserName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="UserName" class="form-control">
        </div>
    </div>
    <div class="form-group row mt-3">
        <label asp-for="City" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="City" class="form-control">
        </div>
    </div>

    <div class="card mt-3">
        <div class="card-header">
            <h5>User Roles</h5>
        </div>
        <div class="card-body">
            @if (Model.Roles != null && Model.Roles.Any())
            {
                <div class="card-body">
                    @for (int i = 0; i < Model.Roles.Count; i++)
                    {
                        <div class="form-check m-1">
                            <input type="hidden" asp-for="@Model.Roles[i].Id" />
                            <input type="hidden" asp-for="@Model.Roles[i].Name" />
                            <input asp-for="@Model.Roles[i].IsSelected" class="form-check-input" />
                            <label class="form-check-label" asp-for="@Model.Roles[i].IsSelected"> @Model.Roles[i].Name </label>
                        </div>
                    }
                </div>
            }
            else
            {
                <h5 class="card-title">None at the moment</h5>
            }
        </div>
    </div>

    <div class="card mt-3">
        <div class="card-header">
            <h5>User Claims</h5>
        </div>
        <div class="card-body">
            @if (Model.UserClaims != null && Model.UserClaims.Any())
            {
                @for (int i = 0; i < Model.UserClaims.Count; i++)
                {
                    <div class="form-check m-1">
                        <input type="hidden" asp-for="@Model.UserClaims[i].ClaimType" />
                        <input type="hidden" asp-for="@Model.UserClaims[i].ClaimType" />
                        <input asp-for="@Model.UserClaims[i].IsSelected" class="form-check-input" />
                        <label class="form-check-label" asp-for="@Model.UserClaims[i].IsSelected"> @Model.UserClaims[i].ClaimType </label>
                    </div>
                }
            }
            else
            {
                <h5 class="card-title">None at the moment</h5>
            }
        </div>
    </div>
    <div class="mt-3">
        <div class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary">Update</button>
                <a asp-action="Index" class="btn btn-primary">Cancel</a>
            </div>
        </div>
    </div>
</form>