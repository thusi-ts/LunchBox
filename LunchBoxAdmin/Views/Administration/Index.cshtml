@model IEnumerable<LunchBox.Shared.User>

@{
    ViewBag.Title = "Administration";
}

<h1>Administration</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                Edit
            </th>
            <th>
                Change password
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    <a asp-controller="Administration" asp-action="EditUser" asp-route-id="@item.Id" class="">Edit</a>
                </td>
                <td>
                    <a asp-controller="Administration" asp-action="ChangePassword" asp-route-id="@item.Id" class="">Change password</a>
                </td>
            </tr>
        }
    </tbody>
</table>