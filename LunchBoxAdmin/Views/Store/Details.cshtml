@model LunchBox.Shared.Store

@{
    ViewData["Title"] = "Details";
}

<div class="card mb-3">
    <h3 class="card-header">Details</h3>
    <div class="card-body">
        <h5 class="card-title">@Model.StoreName</h5>
        <h6 class="card-subtitle text-muted">@Model.Email</h6>
    </div>
    <svg xmlns="" class="d-block user-select-none" width="100%" height="200" aria-label="Placeholder: Image cap" focusable="false" role="img" preserveAspectRatio="xMidYMid slice" viewBox="0 0 318 180" style="font-size:1.125rem;text-anchor:middle">
        <rect width="100%" height="100%" fill="#868e96"></rect>
        <image href="/images/upload/@Model.Logo" height="200" width="100%" asp-append-version="true" />
    </svg>
    <div class="card-body">
        <p class="card-text">@Model.Description</p>
    </div>
    <ul class="list-group list-group-flush">
        <li class="list-group-item">@Model.Id</li>
        <li class="list-group-item">@Model.Phone</li>
        <li class="list-group-item">@Model.Street</li>
        <li class="list-group-item">@Model.ZipCode  @Model.City</li>
        <li class="list-group-item">@Model.Cvr</li>
        <li class="list-group-item">@Model.ChainId</li>
        <li class="list-group-item">@Model.ContactPersonName</li>
        <li class="list-group-item">@Model.ContactPersonEmail</li>
        <li class="list-group-item">@Model.Discount</li>
        <li class="list-group-item">@Model.Map</li>
        <li class="list-group-item">@Model.ActiveOffMes</li>
        <li class="list-group-item">@Model.Pickup</li>
        <li class="list-group-item">@Model.PickupTime</li>
        <li class="list-group-item">@Model.DeliveryOption</li>
        <li class="list-group-item">@Model.Created</li>
        <li class="list-group-item">@Model.Active</li>
        <li class="list-group-item">@Model.OpenMan</li>
        <li class="list-group-item">@Model.OpenTue</li>
        <li class="list-group-item">@Model.OpenWed</li>
        <li class="list-group-item">@Model.OpenThu</li>
        <li class="list-group-item">@Model.OpenFre</li>
        <li class="list-group-item">@Model.OpenSat</li>
        <li class="list-group-item">@Model.OpenSun</li>
    </ul>
    <div class="card-footer">
        <form asp-action="Delete" asp-route-id="@Model.Id">
            <a asp-controller="Store" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>

            <span id="confirmDeleteSpan_@Model.Id" style="display:none"><br /><br />
                <span>Are you sure you want to delete?</span>
                <button type="submit" class="btn btn-danger">Yes</button>
                <a href="#" class="btn btn-primary" onclick="confirmDelete('@Model.Id', false)">No</a>
            </span>

            <span id="deleteSpan_@Model.Id">
                <a href="#" class="btn btn-danger" onclick="confirmDelete('@Model.Id', true)">Delete</a>
            </span>
        </form>
    </div>
</div>

@section Scripts {
    <script src="~/js/site.js"></script>
}