@addTagHelper*, Microsoft.AspNetCore.Mvc.TagHelpers
@model LunchBox.Admin.ViewModels.ProductListViewModelPagination

@{
    ViewData["Title"] = "Index";
}

<h1>Product</h1>

<form id="pagination-form" asp-action="Index" asp-controller="Product" method="post">
    <div class="bs-docs-section">
        <div class="row">
            <div class="col-lg-12">
                <div class="bs-component">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th scope="col">Name</th>
                                <th scope="col">Street</th>
                                <th scope="col">City</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.productListViewModel)
                            {
                                <tr>
                                    <td>@item.ProductName</td>
                                    <td>@item.ProductName</td>
                                    <td>@item.ProductName</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="row">
                    <div class="text-center">
                        <ul class="pagination">

                            <li class="page-item disabled">
                                <a class="page-link">&laquo;</a>
                            </li>

                            @for (int i = 1; i <= Model.PageCount; i++)
                            {

                                @if (i != Model.CurrentPageIndex)
                                {
                                    <li class="page-item">
                                        <a class="page-link page-submit" data-index="@i">@i</a>
                                    </li>
                                }
                                else
                                {
                                    <li class="page-item active">
                                        <a class="page-link page-submit" data-index="@i">@i</a>
                                    </li>
                                }
                            }
                            <li class="page-item">
                                <a class="page-link">&raquo;</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <input type="hidden" id="hfCurrentPageIndex" name="currentPageIndex" />
</form>

@section Scripts {
    <script src="~/js/site.js"></script>
}
