<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - LunchBox - Admin</title>
    @await Html.PartialAsync("_ApplicationHeaderStylesPartial")
</head>
<body>
    <header>
        <partial name="/Views/Shared/_RenderMenuPartial.cshtml" />
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - LunchBox - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    @await Html.PartialAsync("_UScriptsPartial")
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
